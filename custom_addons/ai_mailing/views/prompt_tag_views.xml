<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_prompt_tag_tree" model="ir.ui.view">
        <field name="name">Prompt.tag.tree</field>
        <field name="model">prompt.tag</field>
        <field name="arch" type="xml">
            <tree string="Prompt Tags" editable="bottom">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
            </tree>
        </field>
    </record>


    <record id="action_prompt_tag" model="ir.actions.act_window">
        <field name="name">Prompt Tags</field>
        <field name="res_model">prompt.tag</field>
        <field name="view_mode">tree</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new prompt tag
            </p>
        </field>
    </record>
</odoo>