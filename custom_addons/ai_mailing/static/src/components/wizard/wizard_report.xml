<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="ai_mailing.AIReportWizard" owl="1">
        <!-- Keep the modal structure -->
        <div class="modal-backdrop show"></div>
        <div class="modal show d-block" tabindex="-1">
            <div class="modal-dialog modal-xl modal-dialog-centered">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title text-primary fw-bold">AI Campaign Report</h5>
                        <button type="button" class="btn-close" aria-label="Close" t-on-click="props.close"></button>
                    </div>
                    <!-- Add t-ref="reportContent" here -->
                    <div class="modal-body" style="min-height: 300px;" id="aiReportContent" t-ref="reportContent">
                        <t t-if="state.loading">
                            <div class="d-flex justify-content-center align-items-center" style="height:200px;">
                                <span class="spinner-border text-primary" role="status"></span>
                                <span class="ms-2">Generating report...</span>
                            </div>
                        </t>
                        <t t-elif="state.errorMessage">
                             <!-- Display error message if present -->
                            <div class="alert alert-danger" role="alert" t-esc="state.errorMessage"/>
                        </t>
                        <t t-else="">
                            <!-- Render the report HTML -->
                            <div t-out="state.reportHtml"></div>
                        </t>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-primary me-auto" t-on-click="_onPrintReport" t-if="!state.loading and !state.errorMessage">
                            <i class="fa fa-print me-1"/> Print Report
                        </button>
                        <button type="button" class="btn btn-secondary" t-on-click="props.close">Close</button>
                    </div>
                </div>
            </div>
        </div>
    </t>
</templates>