<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_marketing_campaign_form" model="ir.ui.view">
        <field name="name">marketing.campaign.form</field>
        <field name="model">marketing.campaign</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title mb-3">
                        <h1>
                            <field name="name" placeholder="Campaign Name" readonly="status in ('completed')" class="text-truncate"/>
                        </h1>
                    </div>

                    <div class="position-relative mb-4">
                        <!-- Status Bar with prominent display -->
                        <field name="status" widget="statusbar" options="{'clickable': '0'}" statusbar_visible="draft,running,completed,canceled"/>
                    </div>

                    <div class="d-flex justify-content-end mb-3">
                        <button name="action_set_running" string="Start Campaign" type="object"
                                class="btn btn-primary me-2" invisible="status != 'draft'"
                                groups="ai_mailing.group_marketing_responsible"/>
                        <button name="action_set_completed" string="Mark Completed" type="object"
                                class="btn btn-success me-2" invisible="status != 'running'"
                                groups="ai_mailing.group_marketing_responsible"/>
                        <button name="action_set_canceled" string="Cancel Campaign" type="object"
                                class="btn btn-danger me-2" invisible="status in ('canceled', 'completed')"
                                groups="ai_mailing.group_marketing_responsible"/>
                        <button name="action_reset_to_draft" string="Reset to Draft" type="object"
                                class="btn btn-secondary" invisible="status in ('draft', 'completed')"
                                groups="ai_mailing.group_marketing_responsible"/>
                    </div>

                    <!-- Status Alerts -->
                    <div class="alert alert-warning d-flex align-items-center mb-3" role="alert" invisible="status != 'canceled'">
                        <i class="fa fa-exclamation-triangle me-2" title="Warning"></i>
                        <div><strong>This campaign has been canceled.</strong></div>
                    </div>
                    <div class="alert alert-success d-flex align-items-center mb-3" role="alert" invisible="status != 'completed'">
                        <i class="fa fa-check-circle me-2" title="Success"></i>
                        <div><strong>This campaign has been completed successfully.</strong></div>
                    </div>

                    <!-- Campaign Dashboard Card -->
                    <div class="row mb-4" invisible="status == 'draft'">
                        <div class="col-12">
                            <div class="card">
                                <div class="card-header bg-light">
                                    <h5 class="card-title mb-0">Campaign Performance</h5>
                                </div>
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-lg-4 col-md-6 mb-3">
                                            <div class="d-flex align-items-center">
                                                <div class="me-3">
                                                    <span class="bg-primary rounded-circle p-2 d-inline-flex">
                                                        <i class="fa fa-mouse-pointer text-white" title="Clicks"></i>
                                                    </span>
                                                </div>
                                                <div>
                                                    <h6 class="mb-0">Clicks</h6>
                                                    <h3 class="mb-0"><field name="click_count" readonly="1"/></h3>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-lg-4 col-md-6 mb-3">
                                            <div class="d-flex align-items-center">
                                                <div class="me-3">
                                                    <span class="bg-success rounded-circle p-2 d-inline-flex">
                                                        <i class="fa fa-shopping-cart text-white" title="Sales"></i>
                                                    </span>
                                                </div>
                                                <div>
                                                    <h6 class="mb-0">Sales</h6>
                                                    <h3 class="mb-0"><field name="total_sales" readonly="1"/></h3>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-lg-4 col-md-6 mb-3">
                                            <div class="d-flex align-items-center">
                                                <div class="me-3">
                                                    <span class="bg-info rounded-circle p-2 d-inline-flex">
                                                        <i class="fa fa-calendar text-white" title="Frequency"></i>
                                                    </span>
                                                </div>
                                                <div>
                                                    <h6 class="mb-0">Frequency</h6>
                                                    <h3 class="mb-0"><field name="post_frequency" readonly="1"/></h3>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Two-column layout for main campaign info -->
                    <div class="row mb-4">
                        <!-- Left column: Campaign details -->
                        <div class="col-lg-6">
                            <div class="card h-100">
                                <div class="card-header bg-light">
                                    <h5 class="card-title mb-0">Campaign Details</h5>
                                </div>
                                <div class="card-body">
                                    <group>
                                        <field name="start_date" readonly="status in ('running', 'completed', 'canceled')"
                                               placeholder="Select start date" required="1"/>
                                        <field name="end_date" readonly="status in ('completed', 'canceled')"
                                               placeholder="Select end date" required="1"/>
                                        <field name="content_strategy" readonly="status in ('completed', 'canceled')"
                                               widget="radio" options="{'horizontal': true}" required="1"/>

                                        <field name="apply_discount" widget="boolean_toggle"
                                               readonly="status in ('completed', 'canceled')"
                                               string="Offer Discount"/>
                                        <field name="discount_type" invisible="not  apply_discount" options="{'no_open': True}"/>
                                        <field name="discount_value" invisible="not apply_discount" options="{'no_open': True}" placeholder="Enter discount amount or percentage"/>

                                        <button name="action_apply_campaign_discount"
                                            type="object"
                                            string="Apply Discount"
                                            class="btn-primary"
                                            invisible="not apply_discount"/>

                                        <button name="action_remove_campaign_discount"
                                            type="object"
                                            string="Cancel Discount"
                                            class="btn-secondary"
                                            invisible="not apply_discount"/>
             
                                    </group>
                                </div>
                            </div>
                        </div>

                        <!-- Right column: Campaign context -->
                        <div class="col-lg-6">
                            <div class="card h-100">
                                <div class="card-header bg-light">
                                    <h5 class="card-title mb-0">Campaign Context</h5>
                                </div>
                                <div class="card-body">
                                    <field name="context" placeholder="Provide context for your campaign..."
                                           readonly="status == 'completed'" required="1"
                                           class="form-control" style="min-height: 100px;"/>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Content Configuration Section -->
                    <div class="card mb-4">
                        <div class="card-header bg-light">
                            <h5 class="card-title mb-0">Content Configuration</h5>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label for="tag_ids" class="form-label">Tags</label>
                                        <field name="tag_ids" widget="many2many_tags" readonly="status == 'completed'"
                                               class="d-block" placeholder="Add tags..."/>
                                    </div>
                                    <div class="mb-3">
                                        <label for="link_ids" class="form-label">Links</label>
                                        <field name="link_ids" widget="many2many_tags" readonly="status == 'completed'"
                                               class="d-block" placeholder="Add links..."/>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label for="image_ids" class="form-label">Images</label>
                                        <field name="image_ids" widget="many2many_tags" readonly="status == 'completed'"
                                               class="d-block" placeholder="Add images..."/>
                                    </div>
                                    <div class="mb-3">
                                        <label for="product_tags" class="form-label">Products</label>
                                        <field name="product_tags" widget="many2many_tags" readonly="status == 'completed'"
                                               class="d-block" placeholder="Select products..."/>
                                    </div>
                                </div>
                            </div>
                            <div class="row" invisible="not product_links">
                                <div class="col-12">
                                    <div class="mb-3">
                                        <label for="product_links" class="form-label">Product Links</label>
                                        <field name="product_links" readonly="1" class="form-control"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Content Generation Tab -->
                    <div class="card">
                        <div class="card-header bg-light">
                            <ul class="nav nav-tabs card-header-tabs" role="tablist">
                                <li class="nav-item">
                                    <a class="nav-link active" id="email-tab" data-bs-toggle="tab" href="#email" role="tab" aria-controls="email">
                                        <i class="fa fa-envelope me-2" title="Email"></i>Email
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" id="facebook-tab" data-bs-toggle="tab" href="#facebook" role="tab" aria-controls="facebook">
                                        <i class="fa fa-facebook me-2" title="Facebook"></i>Facebook
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" id="instagram-tab" data-bs-toggle="tab" href="#instagram" role="tab" aria-controls="instagram">
                                        <i class="fa fa-instagram me-2" title="Instagram"></i>Instagram
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" id="twitter-tab" data-bs-toggle="tab" href="#twitter" role="tab" aria-controls="twitter">
                                        <i class="fa fa-twitter me-2" title="Twitter"></i>Twitter (X)
                                    </a>
                                </li>
                            </ul>
                        </div>
                        <div class="card-body">
                            <div class="tab-content">
                                <!-- Email Tab Content -->
                                <div class="tab-pane fade show active" id="email" role="tabpanel">
                                    <div class="d-flex justify-content-between align-items-center mb-3">
                                        <h6 class="mb-0">Email Content</h6>
                                        <button name="action_generate_email_content" string="Generate Email"
                                                type="object" class="btn btn-primary btn-sm"
                                                invisible="status in ('completed', 'canceled')">
                                            <i class="fa fa-magic me-1" title="Generate"></i> Generate Email
                                        </button>
                                    </div>
                                    <field name="email_ids">
                                        <tree decoration-success="mail_scheduling_status == 'sent'"
                                          decoration-info="mail_scheduling_status == 'scheduled'"
                                          decoration-danger="mail_scheduling_status == 'failed'"
                                          decoration-muted="mail_scheduling_status == 'draft'">
                                        <field name="name"/>
                                        <field name="publish_date"/>
                                        <field name="mail_scheduling_status" widget="badge"
                                               decoration-success="mail_scheduling_status == 'sent'"
                                               decoration-info="mail_scheduling_status == 'scheduled'"
                                               decoration-danger="mail_scheduling_status == 'failed'"
                                               decoration-muted="mail_scheduling_status == 'draft'"/>
                                            <!-- No preview button -->
                                        </tree>
                                    </field>
                                </div>

                                <!-- Facebook Tab Content -->
                                <div class="tab-pane fade" id="facebook" role="tabpanel">
                                    <div class="d-flex justify-content-between align-items-center mb-3">
                                        <h6 class="mb-0">Facebook Posts</h6>
                                        <button name="action_generate_facebook_content" string="Generate Facebook Post"
                                                type="object" class="btn btn-primary btn-sm"
                                                invisible="status in ('completed', 'canceled')">
                                            <i class="fa fa-magic me-1" title="Generate"></i> Generate Post
                                        </button>
                                    </div>
                                    <field name="facebook_ids">
                                        <tree decoration-success="scheduling_status == 'published'"
                                          decoration-info="scheduling_status == 'scheduled'"
                                          decoration-danger="scheduling_status == 'failed'"
                                          decoration-muted="scheduling_status == 'draft'">
                                        <field name="name"/>
                                        <field name="publish_date"/>
                                        <field name="scheduling_status" widget="badge"
                                               decoration-success="scheduling_status == 'published'"
                                               decoration-info="scheduling_status == 'scheduled'"
                                               decoration-danger="scheduling_status == 'failed'"
                                               decoration-muted="scheduling_status == 'draft'"/>
                                            <!-- No preview button -->
                                        </tree>
                                    </field>
                                </div>

                                <!-- Instagram Tab Content -->
                                <div class="tab-pane fade" id="instagram" role="tabpanel">
                                    <div class="d-flex justify-content-between align-items-center mb-3">
                                        <h6 class="mb-0">Instagram Posts</h6>
                                        <button name="action_generate_instagram_content" string="Generate Instagram Post"
                                                type="object" class="btn btn-primary btn-sm"
                                                invisible="status in ('completed', 'canceled')">
                                            <i class="fa fa-magic me-1" title="Generate"></i> Generate Post
                                        </button>
                                    </div>
                                    <field name="instagram_ids">
                                        <tree decoration-success="scheduling_status == 'published'"
                                          decoration-info="scheduling_status == 'scheduled'"
                                          decoration-danger="scheduling_status == 'failed'"
                                          decoration-muted="scheduling_status == 'draft'">
                                        <field name="name"/>
                                        <field name="publish_date"/>
                                        <field name="scheduling_status" widget="badge"
                                               decoration-success="scheduling_status == 'published'"
                                               decoration-info="scheduling_status == 'scheduled'"
                                               decoration-danger="scheduling_status == 'failed'"
                                               decoration-muted="scheduling_status == 'draft'"/>
                                            <!-- No preview button -->
                                        </tree>
                                    </field>
                                </div>

                                <!-- Twitter Tab Content -->
                                <div class="tab-pane fade" id="twitter" role="tabpanel">
                                    <div class="d-flex justify-content-between align-items-center mb-3">
                                        <h6 class="mb-0">Twitter Posts</h6>
                                        <button name="action_generate_x_content" string="Generate X Post"
                                                type="object" class="btn btn-primary btn-sm"
                                                invisible="status in ('completed', 'canceled')">
                                            <i class="fa fa-magic me-1" title="Generate"></i> Generate Post
                                        </button>
                                    </div>
                                    <field name="x_ids">
                                        <tree decoration-success="scheduling_status == 'published'"
                                          decoration-info="scheduling_status == 'scheduled'"
                                          decoration-danger="scheduling_status == 'failed'"
                                          decoration-muted="scheduling_status == 'draft'">
                                        <field name="name"/>
                                        <field name="publish_date"/>
                                        <field name="scheduling_status" widget="badge"
                                               decoration-success="scheduling_status == 'published'"
                                               decoration-info="scheduling_status == 'scheduled'"
                                               decoration-danger="scheduling_status == 'failed'"
                                               decoration-muted="scheduling_status == 'draft'"/>
                                            <!-- No preview button -->
                                        </tree>
                                    </field>
                                </div>
                            </div>
                        </div>
                    </div>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="view_marketing_campaign_tree" model="ir.ui.view">
        <field name="name">marketing.campaign.tree</field>
        <field name="model">marketing.campaign</field>
        <field name="arch" type="xml">
            <tree decoration-info="status == 'draft'"
                  decoration-success="status == 'running'"
                  decoration-muted="status == 'completed'"
                  decoration-danger="status == 'canceled'">
                <field name="name"/>
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="content_strategy"/>
                <field name="status" widget="badge"
                       decoration-info="status == 'draft'"
                       decoration-success="status == 'running'"
                       decoration-muted="status == 'completed'"
                       decoration-danger="status == 'canceled'"/>
                <field name="click_count" sum="Total Clicks"/>
                <field name="total_sales" sum="Total Sales"/>
            </tree>
        </field>
    </record>

    <record id="view_marketing_campaign_search" model="ir.ui.view">
        <field name="name">marketing.campaign.search</field>
        <field name="model">marketing.campaign</field>
        <field name="arch" type="xml">
            <search string="Search Campaigns">
                <field name="name"/>
                <field name="content_strategy"/>
                <field name="status"/>
                <filter string="My Campaigns" name="my_campaigns" domain="[('user_id', '=', uid)]"/>
                <separator/>
                <filter string="Draft" name="draft" domain="[('status', '=', 'draft')]"/>
                <filter string="Running" name="running" domain="[('status', '=', 'running')]"/>
                <filter string="Completed" name="completed" domain="[('status', '=', 'completed')]"/>
                <filter string="Canceled" name="canceled" domain="[('status', '=', 'canceled')]"/>
                <group expand="0" string="Group By">
                    <filter string="Status" name="groupby_status" context="{'group_by': 'status'}"/>
                    <filter string="Content Strategy" name="groupby_strategy" context="{'group_by': 'content_strategy'}"/>
                    <filter string="Start Date" name="groupby_start_date" context="{'group_by': 'start_date'}"/>
                    <filter string="End Date" name="groupby_end_date" context="{'group_by': 'end_date'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="view_marketing_campaign_kanban" model="ir.ui.view">
    <field name="name">marketing.campaign.kanban</field>
    <field name="model">marketing.campaign</field>
    <field name="arch" type="xml">
        <kanban
            class="o_kanban_dashboard o_marketing_campaign_kanban"
            default_group_by="status"
            sample="1"
            records_draggable="1"
            quick_create="0">

            <field name="name"/>
            <field name="start_date"/>
            <field name="end_date"/>
            <field name="status"/>
            <field name="content_strategy"/>
            <field name="click_count"/>
            <field name="total_sales"/>

            <progressbar
                field="status"
                colors='{"draft": "secondary", "running": "success", "completed": "info", "canceled": "danger"}'/>

            <templates>
                <t t-name="kanban-box">
                    <div t-attf-class="oe_kanban_card oe_kanban_global_click o_kanban_record_has_image_fill position-relative">

                        <div t-attf-class="
                            position-absolute top-0 start-0 bottom-0
                            #{record.status.raw_value === 'draft' ? 'bg-secondary' : ''}
                            #{record.status.raw_value === 'running' ? 'bg-success' : ''}
                            #{record.status.raw_value === 'completed' ? 'bg-info' : ''}
                            #{record.status.raw_value === 'canceled' ? 'bg-danger' : ''}
                        "
                            style="width: 4px; border-top-left-radius: 4px; border-bottom-left-radius: 4px;">
                        </div>
                        <!-- Card Header with Status -->
                        <div class="o_kanban_card_header">
                            <div class="o_kanban_card_header_title mb-2">
                                <h3 class="o_primary fw-bold text-truncate fs-3">
                                    <field name="name"/>
                                </h3>
                            </div>
                            <div class="o_kanban_card_header_badges">
                                <field name="status" widget="label_selection"
                                    options="{'classes': {
                                        'draft': 'bg-secondary text-white rounded-pill',
                                        'running': 'bg-success text-white rounded-pill',
                                        'completed': 'bg-info text-white rounded-pill',
                                        'canceled': 'bg-danger text-white rounded-pill'}}"/>
                            </div>
                        </div>

                        <!-- Card Content -->
                        <div class="o_kanban_card_content p-3">
                            <!-- Strategy Badge -->
                            <div class="mb-3">
                                <span class="badge bg-info text-white rounded-pill px-3 py-2 fs-6">
                                    <field name="content_strategy" readonly="1"/>
                                </span>
                            </div>
                            <!-- Date Information -->
                            <div class="d-flex align-items-center mb-3" t-if="record.start_date.raw_value">
                                <i class="fa fa-calendar me-2 text-muted" title="Campaign Period"></i>
                                <div class="text-muted">
                                    <field name="start_date"/>
                                    <t t-if="record.end_date.raw_value">
                                        - <field name="end_date"/>
                                    </t>
                                </div>
                            </div>
                        </div>

                        <!-- Card Footer with Metrics -->
                        <div class="o_kanban_card_footer d-flex justify-content-between border-top p-2">
                            <div class="o_kanban_card_footer_left">
                                <div class="d-flex align-items-center">
                                    <span class="badge bg-info bg-opacity-75 rounded-pill me-2 p-2">
                                        <i class="fa fa-mouse-pointer me-1" title="Clicks"></i>
                                        <field name="click_count"/>
                                    </span>
                                </div>
                            </div>
                            <div class="o_kanban_card_footer_right">
                                <div class="d-flex align-items-center">
                                    <span class="badge bg-success bg-opacity-75 rounded-pill p-2">
                                        <i class="fa fa-shopping-cart me-1" title="Sales"></i>
                                        <field name="total_sales"/>
                                    </span>
                                </div>
                            </div>
                        </div>

                        <!-- Card Menu -->
                        <div class="o_dropdown_kanban dropdown position-absolute top-0 end-0 p-2">
                            <a role="button" class="dropdown-toggle o-no-caret btn" data-bs-toggle="dropdown" aria-label="Dropdown menu" title="Dropdown menu">
                                <i class="fa fa-ellipsis-v"/>
                            </a>
                            <div class="dropdown-menu" role="menu">
                                <t t-if="widget.editable">
                                    <a role="menuitem" type="edit" class="dropdown-item">Edit</a>
                                </t>
                                <t t-if="widget.deletable">
                                    <a role="menuitem" type="delete" class="dropdown-item">Delete</a>
                                </t>
                                <div role="separator" class="dropdown-divider"/>
                            </div>
                        </div>
                    </div>
                </t>
            </templates>
        </kanban>
    </field>
</record>

    <record id="view_marketing_campaign_calendar" model="ir.ui.view">
        <field name="name">marketing.campaign.calendar</field>
        <field name="model">marketing.campaign</field>
        <field name="arch" type="xml">
            <calendar string="Marketing Campaigns" date_start="start_date" date_stop="end_date" mode="month">
                <field name="name"/>
                <field name="content_strategy"/>
                <field name="status"/>
                <field name="record_color"/>
            </calendar>
        </field>
    </record>

    <record id="action_marketing_campaign" model="ir.actions.act_window">
        <field name="name">Campaign Management</field>
        <field name="res_model">marketing.campaign</field>
        <field name="view_mode">kanban,tree,form,calendar</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first marketing campaign
            </p>
            <p>
                Marketing campaigns help you organize your content strategy across multiple channels.
            </p>
        </field>
    </record>

    <record id="ir_cron_campaign_check" model="ir.cron">
        <field name="name">Campaign: Check end date</field>
        <field name="model_id" ref="model_marketing_campaign"/>
        <field name="state">code</field>
        <field name="code">model._cron_check_completion()</field>
        <field name="interval_number">1</field>
        <field name="interval_type">hours</field>
        <field name="numbercall">-1</field>
        <field name="doall">False</field>
        <field name="active">True</field>
    </record>
</odoo>
