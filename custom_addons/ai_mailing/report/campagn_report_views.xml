<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="action_report_marketing_campaign" model="ir.actions.report">
        <field name="name">Marketing Campaign Report</field>
        <field name="model">marketing.campaign</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">ai_mailing.marketing_campaign_report</field>
        <field name="report_file">ai_mailing.marketing_campaign-report</field>
        <field name="binding_model_id" ref="model_marketing_campaign"/>
        <field name="binding_type">report</field>
        <field name="print_report_name">'AI Report - %s' % (object.name)</field>
    </record>

    <template id="marketing_campaign_report">
        <t t-call="web.html_container">
            <t t-call="ai_mailing.custom_layout">
                <t t-debug="docs"/>
                <t t-foreach="docs" t-as="doc">
                    <div class="page">
                        <h2>AI Report for <t t-esc="doc.name"/></h2>
                        <div t-raw="doc.ai_dashboard_report"/>
                        <div class="text-muted mt-3">
                            <small>Report generated on: <t t-esc="doc.ai_report_generation_date"/></small>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>