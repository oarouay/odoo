<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="0">
        <record id="cron_upload_product_images" model="ir.cron">
            <field name="name">Upload Product Images to GitHub</field>
            <field name="model_id" ref="model_image_model"/>  <!-- Correct Reference -->
            <field name="state">code</field>
            <field name="code">model.cron_upload_product_images()</field>
            <field name="interval_number">1</field>  <!-- Runs every 6 hours -->
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>  <!-- Run indefinitely -->
        </record>
    </data>
</odoo>
